{
    "name": "blamodex/laravel-addresses",
    "description": "Address management package for Laravel applications.",
    "type": "library",
    "keywords": [
        "laravel",
        "address",
        "addresses",
        "postal",
        "country",
        "location",
        "geocoding"
    ],
    "license": "MIT",
    "homepage": "https://github.com/blamodex/laravel-addresses",
    "support": {
        "issues": "https://github.com/blamodex/laravel-addresses/issues",
        "source": "https://github.com/blamodex/laravel-addresses"
    },
    "autoload": {
        "psr-4": {
            "Blamodex\\Address\\": "src/",
            "Blamodex\\Address\\Tests\\": "tests/",
            "Blamodex\\Address\\Database\\": "database/"
        }
    },
    "authors": [
        {
            "name": "blackmage-codex",
            "email": "admin@joelblodgett.ca"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/config": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/queue": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3",
        "orchestra/testbench": "^10.0",
        "squizlabs/php_codesniffer": "4.x-dev",
        "phpunit/php-code-coverage": "*",
        "larastan/larastan": "^3.0",
        "blamodex/laravel-ai-agents": "^1.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=tests/reports",
        "lint": "phpcs --standard=.phpcs.xml src tests",
        "lint:fix": "phpcbf --standard=.phpcs.xml src tests",
        "analyze": "vendor/bin/phpstan analyse --memory-limit=256M"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Blamodex\\Address\\AddressServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
